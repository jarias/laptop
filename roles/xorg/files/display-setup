#!/bin/sh

IN="eDP1"
EXT="HDMI1"

pkill polybar || true

polybar int &

if (xrandr | grep "$EXT disconnected"); then
  xrandr --output $EXT --off --output $IN --auto --primary
else
  xrandr --output $IN \
    --auto \
    --output $EXT \
    --primary \
    --mode 1920x1080 \
    --scale 2x2 \
    --right-of $IN
  polybar ext &
fi

pkill compton
compton --xrender-sync-fence &

sleep 0.5
feh --bg-scale ~/Pictures/wallpaper.png
